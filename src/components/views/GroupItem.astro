---
import Link from '~/components/base/Link.astro'
import { UI } from '~/config'

export interface GroupItemData {
    id: string
    link: string
    desc: string
    icon: string
}

interface Props {
  items: GroupItemData[]
}

const { items } = Astro.props
const { maxGroupColumns, showGroupItemColorOnHover } = UI.groupView
---

<div
  class="grid grid-cols-[repeat(auto-fill,minmax(350px,1fr))] mx-auto gap-3 py-8 lt-lgp:max-w-[712px]! lt-md:max-w-[350px]!"
  style={`max-width: calc(350px * ${maxGroupColumns} + ${maxGroupColumns - 1} * 0.75rem);`}
>
  {
    items.map(item => (
      <Link
        class="link relative max-w-full w-[350px] flex items-center rounded-md bg-transparent px-3.5 pb-3.5 pt-2 text-4.4 transition-all duration-300 hover:bg-[#88888811]"
        href={item.link}
        aria-hidden={true}
        external={true}
      >
        <div class="pr-5 pt-2">
          <div
            class={`icon text-7.5 leading-9 op-50 saturate-0 ${item.icon}`}
          />
        </div>
        <div class="flex-auto">
          <div>{item.id}</div>
          <div class="text-sm font-normal op-50">{item.desc}</div>
        </div>
      </Link>
    ))
  }
</div>

{showGroupItemColorOnHover && (
  <style>
    .link:hover .icon {
      filter: saturate(1);
    }
  </style>
)}
